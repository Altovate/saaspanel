<div class="panel">
	<div class="panel-body">
		<span class="pull-right">
			<button class="btn btn-info" {{action 'edit' this}}><span class="glyphicon glyphicon-pencil"></span> Edit</button>
			<button class="btn btn-danger" id="delete-btn" {{bind-attr data-delete=id}} {{bind-attr data-summary=id}}><span class="glyphicon glyphicon-remove"></span> Delete</button>
		</span>

<h3>{{ id }}</h3>

<div class="form form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2" for="service_id" id="service_id-label">Service</label>
        <p class="form-control-static">{{#link-to "services.view" service}}{{service.id}}{{/link-to}}</p>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="cycle" id="cycle-label">Cycle</label>
        <p class="form-control-static">{{cycle}}</p>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="discount" id="discount-label">Discount</label>
        <p class="form-control-static">{{discount}}</p>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="created_at" id="created_at-label">Created At</label>
        <p class="form-control-static">{{created_at}}</p>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="updated_at" id="updated_at-label">Updated At</label>
        <p class="form-control-static">{{updated_at}}</p>
    </div>
</div>
	</div>
</div>

