<div class="panel">
	<div class="panel-body">
		<span class="pull-right">
			<button class="btn btn-info" {{action 'edit' this}}><span class="glyphicon glyphicon-pencil"></span> Edit</button>
			<button class="btn btn-danger" id="delete-btn" {{bind-attr data-delete=id}} {{bind-attr data-summary=option_name}}><span class="glyphicon glyphicon-remove"></span> Delete</button>
		</span>

<h3>{{ option_name }}</h3>

<div class="form form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2" for="service_id" id="service_id-label">Service</label>
        <p class="form-control-static">{{#link-to "services.view" service}}{{service.id}}{{/link-to}}</p>    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="option_name" id="option_name-label">Option Name</label>
        <p class="form-control-static">{{option_name}}</p>    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="base_price" id="base_price-label">Base Price</label>
        <p class="form-control-static">{{money base_price}}</p>    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="description" id="description-label">Description</label>
        <p class="form-control-static">{{description}}</p>    </div>
</div>
	</div>
</div>

