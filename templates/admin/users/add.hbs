<div class="panel panel-primary">
	<div class="panel-heading">Create New User</div>
	<div class="panel-body">

<div class="form form-horizontal form-view">
	<div class="form-group">
		<label class="control-label col-md-2 required" for="username" id="username-label">Username</label>
		<div class="col-md-6">{{input id="username" class="form-control type-varchar" value=username}}</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 required" for="email" id="email-label">Email</label>
		<div class="col-md-6">{{input id="email" class="form-control type-varchar" value=email}}</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 required" for="confirmed" id="confirmed-label">Confirmed</label>
		<div class="col-md-6">{{input id="confirmed" class="form-control type-tinyint" value=confirmed}}</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 required" for="role" id="role-label">Role</label>
		<div class='col-md-4'>
	{{view Em.Select content=role_choices value=role class='form-control'}}
</div>	</div>
	<div class="col-md-offset-2">
		<button class="btn btn-primary" {{action 'save'}}>Save</button>
		<button class="btn btn-default" {{action 'cancel'}}>Cancel</button>
	</div>
</div>

	</div>
</div>