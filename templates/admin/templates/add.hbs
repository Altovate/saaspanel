<div class="panel">
	<div class="panel-body">
		<h3>Templates</h3>

<div class="form form-horizontal form-view">
	<div class="form-group">
		<label class="control-label col-md-2 required" for="name" id="name-label">Name</label>
		<div class="col-md-6">{{input id="name" class="form-control type-varchar" value=name}}</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 " for="protect" id="protect-label">Protect</label>
		<div class="col-md-6">{{input id="protect" class="form-control type-tinyint" value=protect}}</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 required" for="template" id="template-label">Template</label>
		<div class='col-md-10'>{{view Em.TextArea value=template class='form-control type=-text' rows='5'}}</div>	</div>
	<button class="btn btn-primary" {{action 'save'}}>Save</button>
	<button class="btn btn-default" {{action 'cancel'}}>Cancel</button>
</div>

	</div>
</div>